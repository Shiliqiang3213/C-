3  

#include<iostream.h>
#include<iomanip.h>
define N 10
void main()
{
int a[N];
int i,k,*p,*q;
cout<<"请输入10个数:";
for(i=0;i<N;i++)
cin>>a[i];
p=a;
q=a;
for(i=1;i<N;i++)
if(a[i]<*p)
{
p=&a[i];
}
if(a[i]>*q)
{
q=&a[i];
}
k=*p;
*p=*q;
*q=k;
cout<<"调换后的数组为:"<<endl:
for(i=0;i<N;i++)
cout<<a[i];
}



4
#include<iostream.h>
#include<iomanip.h>
void main()
{
int a[10];
int i,t,*p,*q;
cout<<"请输入10个数:";
for(i=0;i<10;i++)
cin>>a[i];
p=a;
q=&a[9];
while(p<q)
{
t=*p;
*p=*q;
*q=t;
p++;
q--;
}
cout<<"反序输出为:";
for(i=0;i<10;i++)
cout<<setw(3)<<a[i];
cout<<endl;
}



6
#include<iostream.h>
#include<string.h>
void main()
{
int n,*p,*q;
char a[100];
char b[100];
cout<<"输入要插入的位置为n处";
cin>>n;
p=a;
q=b;
if(strlen(a)>=n)
{
p+=n-1;
for(q=0;*q!='\0';p++,q++)
{
*p=*q;
}
}
cout<<"string a:"<<a<<endl'
}

