3 题
#include <iostream.h>
void main()
{
	int x;
	cout<<"输入x:"<<endl;
	cin>>x;
	if((x%7==0)||(x%3==0))
		cout<<"YES"<<endl;
	else
		cout<<"NO"<<endl;
}


 
第五题 
 #include <iostream.h>
#include <math.h>
void main()
{
	float a,b,c,s;
	cout<<"输入三个数:"<<endl;
	cin>>a>>b>>c;
	if(a+b>c)
       s=(a+b+c)/2;
       cout<<"该三角形的面积是:"<<sqrt(s*(s-a)*(s-b)*(s-c))<<endl;
	else
         cout<<"三个数不能构成三角形的三边"<<endl;
}


 
第六题 
#include <iostream.h>
#include <iomanip.h>
void main()
{
	float r,s,c,pi;
	int k;
 cout<<"输入r和k的值:"<<endl;
	cin>>r>>k;
	pi=3.1415926;
	s=pi*r*r;
	c=2*pi*r;
	switch(k)
	{
	case 1:cout<<s="<<s<<endl;break;
	case 2:cout<<"c="<<<<c<<endl;break;
	default:cout<<"s="<<s
     <<","<<"c="<<c<<endl;
	}
} 



 
第八题 
 #include <iostream.h>
#include <math.h>
void main()
{
	int a,b;
	cout<<"请输入两个整数:";
	cin>>a>>b;
	if(a%b==0)
		cout<<"a/b="<<a/b<<endl;
	else
		cout<<"a/b="<<(int)a/b<<"…"<<a%b<<endl;
}
