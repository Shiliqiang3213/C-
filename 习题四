第二题 ：
#include<iostream.h>
void main()
{
int i,leap,x,y,z,I;
i=0,z=0;
for(x=2000;2000<=x&&3000>=x;x++)
{
if(x%400==0)
{
leap=1;
i=i+1;
}
else
if(x%4==0&&x%100!=0)
{
leap=1;
z=z+1;
}
lese
leap=0;
I=i+z;
if(leap)
{
cout<<"\t"<<x;
I=I++;
if(I%10==0)
cout<<endl;
}
}
if(I%10!=0)
cout<<endl;
cout<<"总闰年数="<<I<<endl;
}
 

 
第三题 
 #include<iostream.h>
void main()
{
int x,y,z,i;
y=0,z=0;
cout<<"输入x"<<endl;
cin>>x;
while(x!=1)
 {
 if(x%2==0)
 {
x=x/2;
y=y+1
}
else
{
x=x*3+1;
z=z+i;
}
i=y+z
cout<<"z="<<z<<endl;
}



 
第五题 
 #include<iostream.h>
void main()
{
int x,y;
cout<<"结果是:";
for(x=0;x<=9;x=x++)
 {
 for(y=0;y<=9;y=y++)
 {
if((10*x+y)*（10*x+y）<10&&(10*x+y)*（10*x+y）=10*x+y)
{
cout<<10*x+y<<"\t"
}
lese
if((10*x+y)*（10*x+y）<100&&(10*x+y)*（10*x+y）>=10&&(10*x+y)*（10*x+y）%10=10*x+y)
{
cout<<10*x+y<<"\t"
}
lese
if((10*x+y)*（10*x+y)>=100&&(10*x+y)*（10*x+y）%100=10*x+y)
{
cout<<10*x+y<<"\t"
}
}
}
cout<<"\n"
}
